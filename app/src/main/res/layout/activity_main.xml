<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.samirtalbi.maratoons.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/audiobutton"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ðŸ”‡"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title" />

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="136dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/playbut"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="285dp"
            android:layout_height="76dp"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:elevation="50dp"
            android:fontFamily="@font/pacificotest"
            android:text="Nouvelle Partie"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="217dp" />

        <Button
            android:id="@+id/score"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="285dp"
            android:layout_height="76dp"
            android:layout_below="@+id/playbut"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pacificotest"
            android:text="Meilleur Score"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="325dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
