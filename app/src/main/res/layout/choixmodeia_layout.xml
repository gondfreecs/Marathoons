<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    =

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pacificotest"
                android:shadowColor="@android:color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="Entrer votre pseudo :"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/pseudobot"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/pacificotest"
                android:inputType="textPersonName"
                android:text="Joueur"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="46dp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pacificotest"
            android:text="Chrono ?"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676">

        <Button
            android:id="@+id/vsfort"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/pacificotest"
            android:onClick="onClick"
            android:text="Mode difficile"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/pacificotest"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="OU"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vsfaible"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/pacificotest"
            android:onClick="onClick"
            android:text="Mode facile"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="279dp">

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pacificotest"
                android:text="Distance : 42195"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/distanceBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="32195"
                android:progress="42195" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>